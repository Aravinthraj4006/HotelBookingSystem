@model IEnumerable<HotelBookingSystem.ViewModel.RoomBookingModel>
<table style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Booking from</th>
            <th>Booking To</th>
            <th>Room</th>
            <th>Number of members</th>
            <th>Number of Days</th>
            <th>Room price</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>item.CustomerName</td>
                    <td>item.CustomerAddress</td>
                    <td>item.CustomerMobileNo</td>
                    <td>item.BookingFrom.ToString(format:"dd-MMM-yyyy")</td>
                    <td>item.BookingTo.ToString(format:"dd-MMM-yyyy")</td>
                    <td>item.RoomNumber</td>
                    <td>item.NoOfMembers</td>
                    <td>item.NoOfDays</td>
                    <td>item.RoomPrice.ToString(format:"#.##0.00")</td>
                    <td>item.totalAmount.ToString(format:"#,##0.00")</td>
                </tr>
            }
    </tbody>
</table>